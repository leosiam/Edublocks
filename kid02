import random
import time

print("=== ‡πÄ‡∏Å‡∏°‡∏ß‡∏±‡∏î‡∏î‡∏ß‡∏á‡∏ï‡∏≤‡∏°‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô ===")

name = input("‡∏õ‡πâ‡∏≠‡∏ô‡∏ä‡∏∑‡πà‡∏≠‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì: ")
print("‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏õ‡∏£‡∏∞‡πÄ‡∏°‡∏¥‡∏ô‡∏û‡∏•‡∏±‡∏á‡πÇ‡∏ä‡∏Ñ‡∏Ç‡∏≠‡∏á", name, "...")
time.sleep(1)

luck = random.randint(1, 5)   # ‡∏û‡∏•‡∏±‡∏á‡πÇ‡∏ä‡∏Ñ 1‚Äì5

print("‡∏û‡∏£‡πâ‡∏≠‡∏°‡∏´‡∏£‡∏∑‡∏≠‡∏¢‡∏±‡∏á? ‡∏°‡∏≤‡∏ó‡∏≤‡∏¢‡∏£‡∏∞‡∏î‡∏±‡∏ö‡πÇ‡∏ä‡∏Ñ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Å‡∏±‡∏ô!")
time.sleep(1)

guess = int(input("‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏¥‡∏î‡∏ß‡πà‡∏≤‡∏£‡∏∞‡∏î‡∏±‡∏ö‡πÇ‡∏ä‡∏Ñ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∑‡∏≠ (1-5): "))

if guess == luck:
    print("‡∏™‡∏∏‡∏î‡∏¢‡∏≠‡∏î! ‡∏Ñ‡∏∏‡∏ì‡πÄ‡∏î‡∏≤‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á üéâ")
    score = 10
elif abs(guess - luck) == 1:
    print("‡πÉ‡∏Å‡∏•‡πâ‡∏°‡∏≤‡∏Å! ‡∏≠‡∏µ‡∏Å‡∏ô‡∏¥‡∏î‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡πÄ‡∏≠‡∏á üëç")
    score = 5
else:
    print("‡∏´‡πà‡∏≤‡∏á‡∏û‡∏≠‡∏™‡∏°‡∏Ñ‡∏ß‡∏£ ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏£‡∏≠‡∏ö‡∏´‡∏ô‡πâ‡∏≤‡∏ô‡∏∞ üòâ")
    score = 2

print("‡∏£‡∏∞‡∏î‡∏±‡∏ö‡πÇ‡∏ä‡∏Ñ‡∏à‡∏£‡∏¥‡∏á‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∑‡∏≠:", luck)
print("‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ‡∏£‡∏±‡∏ö:", score)
print("‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏Å‡∏°‡∏ô‡∏∞", name)
